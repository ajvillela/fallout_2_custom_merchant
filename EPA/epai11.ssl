procedure evil_plant_placing_p_proc
begin
  variable LVar1 := 0;

  gfade_out(10 * 5);
  game_ui_disable;
  LVar1 := create_object_sid(PID_SPORE_PLANT , 17684, dude_elevation, SCRIPT_ECPLANT);
