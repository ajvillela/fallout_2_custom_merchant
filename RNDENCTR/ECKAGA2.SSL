         set_kaga_met;
         destroy_object(self_obj);
      end
   end else if (obj_can_see_obj(self_obj, dude_obj)) then begin
      attack(dude_obj);
   end*/
   variable rot;

   if (self_visible) then begin
      if (not( is_loading_game ) and not(kaga_2)) then begin
         call do_setup;
      end else if ((get_critter_stat(self_obj,STAT_current_hp)) <= ((get_critter_stat(self_obj,STAT_max_hit_points)) - 100)) then begin
         if not(local_var(LVAR_Defeated)) then begin
            set_local_var(LVAR_Defeated,1);
         end
         if ((not(obj_on_screen(self_obj))) or (tile_distance_objs(dude_obj, self_obj) > 15)) then begin
            float_msg(self_obj, mstr(113), FLOAT_MSG_RED);
            set_global_var(GVAR_RND_KAGA_STATE, global_var(GVAR_RND_KAGA_STATE) bwor 64);
            //destroy_object(self_obj);
            set_obj_visibility(self_obj,1);
         end else begin
            if (tile_distance_objs(dude_obj, self_obj) < 15) then begin
               if (anim_busy(self_obj) == 0) then begin
                  rot := rotation_to_tile(tile_num(dude_obj), tile_num(self_obj));
                  animate_move_obj_to_tile(self_obj, tile_num_in_direction(tile_num(self_obj), rot, random(30, 40)), 1);
                  rot := (rot + 1) % 6;
                  while((anim_busy(self_obj) == 0) and (rot != rotation_to_tile(tile_num(dude_obj), tile_num(self_obj)))) do begin
                     debug_msg("flee loop: rot == " + rot);
                     animate_move_obj_to_tile(self_obj, tile_num_in_direction(tile_num(self_obj), rot, random(30, 40)), 1);
                     rot := (rot + 1) % 6;
                  end
               end
            end else begin
               if (not(anim_busy(self_obj))) then begin
                  animate_move_obj_to_tile(self_obj, tile_num_in_direction(tile_num(self_obj), rotation_to_tile(tile_num(dude_obj), tile_num(self_obj)), 30), 1);
               end
            end
         end
      end else begin
         if (not(combat_is_initialized) and (local_var(LVAR_Hostile) == 2) and obj_can_see_obj(self_obj, dude_obj)) then begin
            attack_complex(dude_obj, 0, 1, 0, 0, 30000, 0, 0);
         end
      end
   end
   
   /*if ((get_critter_stat(self_obj,STAT_current_hp)) <= ((get_critter_stat(self_obj,STAT_max_hit_points)) - 100)) then begin
