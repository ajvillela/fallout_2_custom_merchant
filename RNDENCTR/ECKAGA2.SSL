      Critter_Rotation:=dude_inv_rot;
      Critter_Tile:=tile_num_in_direction(self_tile,Critter_Rotation,random(3,4));
      critter_attempt_placement(Critter,Critter_Tile,0);
      Face_Critter(dude_obj,Critter);
      
      Critter:=create_object_sid(PID_FEMALE_BANDIT,0,0,SCRIPT_ECBANDIT);
      add_obj_to_inven(Critter, create_object(PID_SHARP_SPEAR,0,0));
      add_mult_objs_to_inven(Critter, create_object(PID_BOTTLE_CAPS,0,0),random(0,10));
      wield_obj_critter(Critter,obj_carrying_pid_obj(Critter, PID_SHARP_SPEAR));
      critter_add_trait(Critter,TRAIT_OBJECT,OBJECT_TEAM_NUM,TEAM_RND_KAGA);
      critter_add_trait(Critter,TRAIT_OBJECT,OBJECT_AI_PACKET,AI_GENERIC_GUARDS);
