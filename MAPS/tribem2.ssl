  end
  if (not(tile_contains_obj_pid(21721,0,PID_FISH2))) then begin
    fish:=create_object(PID_FISH2,21721,0);
  end
  if (not(tile_contains_obj_pid(21519,0,PID_FISH2))) then begin
    fish:=create_object(PID_FISH2,21519,0);
  end
end